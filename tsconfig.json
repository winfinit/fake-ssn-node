{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
		"strictNullChecks": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "noLib": false,
        "outDir": "./built",
		"types" : ["node"],
        "typeRoots": [ "node_modules/@types" ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings",
        "**/*.spec.ts"
    ]
}